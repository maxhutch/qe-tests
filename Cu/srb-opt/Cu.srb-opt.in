  restart_mode = 'from_scratch'
  tstress = .true.
  tprnfor = .true.
  outdir = './raw'
  prefix = 'Cu'
  pseudo_dir = '../pseudo'
 /

 &system
  ibrav = 2
  celldm(1) = 6.942
