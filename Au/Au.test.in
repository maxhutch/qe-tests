 &control
  calculation = 'scf'
  title = 'Gold_fcc'
  restart_mode = 'from_scratch'
  tstress = .true.
  tprnfor = .true.
  outdir = './raw'
  prefix = 'Au'
  pseudo_dir = './pseudo'
 /

 &system
  ibrav = 2
  celldm(1) = 7.710
  nat = 1
  ntyp = 1
  ecutwfc = 32
  ecutrho = 256
  occupations = 'smearing'
  degauss = 7.d-6
 /

 &electrons
  conv_thr = 1.d-12
  diagonalization = 'david'
 /

 &shirley
  use_shirley = .true.
  basis_life = 3
  max_basis_size = 128
  trace_tol = 0.00001
 /

