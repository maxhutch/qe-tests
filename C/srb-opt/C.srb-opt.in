&control
  calculation = 'scf'
  restart_mode = 'from_scratch'
  tstress = .true.
  tprnfor = .true.
  outdir = './raw'
  prefix = 'C-diamond'
  pseudo_dir = '../pseudo'
 /

 &system
  ibrav = 2
  celldm(1) = 6.74125
  nat = 2
  ntyp = 1
  ecutwfc = 128
  ecutrho = 1024
  occupations = 'smearing'
  smearing = 'fd'
  degauss = 6.336d-7
 /

